{
  "name": "e-utils",
  "version": "0.0.1",
  "description": "工具库",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "jest --notify --config=jest.config.js",
    "test:dev": "jest --watch --notify --config=jest.config.js",
    "build": "tsc -p tsconfig.build.json",
    "build:dev": "tsc -p tsconfig.build.json -w",
    "lint": "eslint --ext .ts,.js src && npm run test",
    "prepublish": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eastFang/e-utils.git"
  },
  "keywords": [
    "frontend",
    "utils"
  ],
  "author": "fangzhendong95@qq.com",
  "license": "ISC",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "10.5.3",
    "typescript": "^4.2.3"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint"
    ],
    "__tests__/**/*.js": [
      "jest"
    ]
  },
  "dependencies": {}
}
